.scrollbar
    float left
    height 550px
    width 100%
    background #fff
    overflow-y scroll
    margin-bottom 25px

.force-overflow
    min-height 450px

.scrollbar-primary
    scrollbar-color #4285F4 #F5F5F5
    &::-webkit-scrollbar
        width 7px
        background-color #F5F5F5
    &::-webkit-scrollbar-thumb
        border-radius 10px
        -webkit-box-shadow inset 0 0 6px rgba(0, 0, 0, 0.1)
        background-color #4285F4

.scrollbar-danger
    scrollbar-color #ff3547 #F5F5F5
